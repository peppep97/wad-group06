<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/trip_list">

    <fragment
        android:id="@+id/trip_details"
        android:name="com.group06.lab1.ui.trip.TripDetailsFragment"
        android:label="Trip Details"
        tools:layout="@layout/fragment_trip_details" >
        <action
            android:id="@+id/action_trip_details_to_trip_edit"
            app:destination="@id/trip_edit" />
    </fragment>
    <fragment
        android:id="@+id/trip_edit"
        android:name="com.group06.lab1.ui.trip.TripEditFragment"
        android:label="Edit Trip" >
        <action
            android:id="@+id/action_trip_edit_to_trip_list"
            app:destination="@id/trip_list"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/trip_list"
        android:name="com.group06.lab1.ui.trip.TripListFragment"
        android:label="TripListFragment" >
        <action
            android:id="@+id/action_trip_list_to_trip_details"
            app:destination="@id/trip_details" />
        <action
            android:id="@+id/action_trip_list_to_trip_edit"
            app:destination="@id/trip_edit"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
    </fragment>
</navigation>