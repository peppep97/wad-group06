<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/trip_list">

    <fragment
        android:id="@+id/trip_details"
        android:name="com.group06.lab.trip.TripDetailsFragment"
        android:label="Trip Details"
        tools:layout="@layout/fragment_trip_detail" >
        <action
            android:id="@+id/action_trip_details_to_trip_edit"
            app:destination="@id/trip_edit"
            app:enterAnim="@anim/custom_from_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/custom_from_top"
            app:popExitAnim="@anim/custom_to_top"
            app:popUpTo="@+id/trip_details"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_trip_details_to_favored_trip_list"
            app:destination="@id/favored_trip_list"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_trip_details_to_trip_list"
            app:destination="@id/trip_list"
            app:enterAnim="@anim/custom_from_right"
            app:exitAnim="@anim/custom_from_left"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/trip_edit"
        android:name="com.group06.lab.trip.TripEditFragment"
        android:label="Edit Trip" >
        <action
            android:id="@+id/action_trip_edit_to_trip_list"
            app:destination="@id/trip_list"
            app:enterAnim="@anim/custom_fade_in"
            app:exitAnim="@anim/custom_to_top"
            app:popEnterAnim="@anim/custom_fade_in"
            app:popExitAnim="@anim/custom_to_top"
            app:popUpTo="@id/trip_list"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_trip_edit_to_othersTripListFragment"
            app:destination="@id/trip_list"
            app:enterAnim="@anim/custom_from_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/custom_to_top" />
        <action
            android:id="@+id/action_trip_edit_to_locationSelectorFragment"
            app:destination="@id/locationSelectorFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/my_trip_list"
        android:name="com.group06.lab.trip.TripListFragment"
        android:label="My Trips">
        <action
            android:id="@+id/action_trip_list_to_trip_details"
            app:destination="@id/trip_details"
            app:enterAnim="@anim/custom_from_right"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/custom_from_right"
            app:popExitAnim="@anim/custom_to_right" />
        <action
            android:id="@+id/action_trip_list_to_trip_edit"
            app:destination="@id/trip_edit"
            app:enterAnim="@anim/custom_from_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/custom_to_top" />
    </fragment>
    <fragment
        android:id="@+id/show_profile"
        android:name="com.group06.lab.profile.ShowProfileFragment"
        android:label="Show Profile"
        tools:layout="@layout/fragment_activity_show_profile">
        <action
            android:id="@+id/action_showProfileActivity_to_editProfileActivity"
            app:destination="@id/editProfileActivity"

            app:enterAnim="@anim/custom_from_top"
            app:exitAnim="@anim/nav_default_exit_anim"

            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/custom_to_top"
            app:popUpTo="@+id/show_profile" />

    </fragment>
    <fragment
        android:id="@+id/editProfileActivity"
        android:name="com.group06.lab.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_activity_edit_profile">
        <action
            android:id="@+id/action_editProfileActivity_to_showProfileActivity"
            app:destination="@id/show_profile"
            app:enterAnim="@anim/custom_from_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/custom_to_top"
            app:popUpTo="@+id/editProfileActivity"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/trip_list"
        android:name="com.group06.lab.trip.OthersTripListFragment"
        android:label="Trips"
        tools:layout="@layout/fragment_others_trip_list">
        <action
            android:id="@+id/action_othersTripListFragment_to_trip_details"
            app:destination="@id/trip_details"
            app:enterAnim="@anim/custom_from_right"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/custom_from_right"
            app:popExitAnim="@anim/custom_to_right" />
        <action
            android:id="@+id/action_trip_list_to_trip_edit2"
            app:destination="@id/trip_edit"
            app:enterAnim="@anim/custom_from_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/custom_to_top" />
    </fragment>
    <fragment
        android:id="@+id/favored_trip_list"
        android:name="com.group06.lab.trip.FavoredTripsFragment"
        app:enterAnim="@anim/custom_from_top"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_exit_anim"
        app:popExitAnim="@anim/nav_default_exit_anim"
        android:label="Users" >
        <action
            android:id="@+id/action_favored_trip_list_to_show_profile"
            app:destination="@id/show_profile"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/locationSelectorFragment"
        android:name="com.group06.lab.trip.LocationSelectorFragment"
        android:label="Tap on a location" >
        <action
            android:id="@+id/action_locationSelectorFragment_to_trip_edit"
            app:destination="@id/trip_edit"
            app:enterAnim="@anim/custom_from_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/custom_to_top"
            app:popUpTo="@id/trip_edit"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>